<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD
3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="po.article.Article" table="dbo.Article" catalog="ACMplatform">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="increment" />
        </id>

        <many-to-one name="article" class="po.article.Article" cascade="none" lazy="false">
            <column name="ArtID"/>
        </many-to-one>

        <many-to-one name="knoledge" class="po.knowledge.Knowledge" cascade="none" lazy="false">
            <column name="KnoID"/>
        </many-to-one>

    </class>
</hibernate-mapping>